# my sxhkd keybinding configuration

# make sxhkd reload its configuration files:
mod4 + Escape
	pkill -USR1 -x sxhkd;  dunstify -a "ï€ž" "Sxhkd configuration reloaded!!"

# terminal emulator
mod4 + Return
	$TERMINAL

# program launcher
mod4 + d
	dmenu_run

# Show clipmenu
mod4 + v
    CM_LAUNCHER=dmenu clipmenu

# open htop
mod4 + r
	$TERMINAL -e htop

# open file browser
mod4 + e
	$TERMINAL -e nnn

# open BROWSER
mod4 + w
	$BROWSER

# open network manager
mod4 + shift + w
	networkmanager_dmenu
	#$TERMINAL -e sudo nmtui

# run bluetooth dmenu script
mod4 + shift + b
	dmenu-bluetooth; kill -38 $(pidof dwmblocks);

# Take screenshot
Print
	scrot -e 'mv $f ~/pix/shots/'

# power off menu
mod1 + F4
	power_off

# toggle compositor
#mod4 + n
#toggle_compton

# Toggle mute
XF86AudioMute
    volumeControl mute; kill -54 $(pidof dwmblocks)
	
# Change volume
XF86Audio{Raise,Lower}Volume
    volumeControl {up,down}; kill -54 $(pidof dwmblocks)

# Change Brightness
XF86MonBrightness{Up,Down}
	brightnessControl {up,down}; kill -64 $(pidof dwmblocks)
