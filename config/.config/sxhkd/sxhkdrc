# my sxhkd keybinding configuration

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd;  dunstify -a "ï€¡ " "Sxhkd configuration reloaded!!"

# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + d
	dmenu_run

# Show clipmenu
super + v
    CM_LAUNCHER=dmenu clipmenu

# open htop
super + r
	$TERMINAL -e htop

# open file browser
super + e
	$TERMINAL -e nnn

# open BROWSER
super + w
	$BROWSER

# open network manager
super + shift + w
	networkmanager_dmenu
	#$TERMINAL -e sudo nmtui

# run bluetooth dmenu script
super + shift + b
	dmenu-bluetooth; kill -RTMIN+4 dwmblocks;

# Take screenshot
super + s
	scrot -e 'mv $f ~/pix/shots/'

# power off menu
super + p
	power_off

# volume control
super + u
	volumeControl up; pkill -RTMIN+20 dwmblocks;

super + shift + u
	volumeControl down; pkill -RTMIN+20 dwmblocks;

super + shift + m
	volumeControl mute; pkill -RTMIN+20 dwmblocks;
# toggle compositor
#super + n
#toggle_compton

# Toggle mute
XF86AudioMute
    volumeControl mute; kill -RTMIN+20 dwmblocks;
	
# Change volume
XF86Audio{Raise,Lower}Volume
    volumeControl {up,down}; kill -RTMIN+20 dwmblocks;

# Change Brightness
XF86MonBrightness{Up,Down}
	brightnessControl {up,down}; kill -RTMIN+30 dwmblocks;
