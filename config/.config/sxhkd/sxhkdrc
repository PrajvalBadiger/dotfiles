# my sxhkd keybinding configuration

# make sxhkd reload its configuration files:
mod1 + Escape
	pkill -USR1 -x sxhkd;  dunstify -a "" "Sxhkd configuration reloaded!!"

# terminal emulator
mod1 + Return
	$TERMINAL

# program launcher
mod1 + d
	dmenu_run

# randomly choose a wallpaper from $HOME/pix/wall/
mod1 + c
	feh --bg-scale --no-fehbg --randomize "$HOME/pix/wall/"; dunstify -a "" "Feh: wallpaper changed!!"

# open htop
mod1 + r
	$TERMINAL -e htop

# open file browser
mod1 + e
	$TERMINAL -e nnn

# open BROWSER
mod1 + w
	$BROWSER

# open network manager
mod1 + shift + w
	networkmanager_dmenu
	#$TERMINAL -e sudo nmtui

# run bluetooth dmenu script
mod1 + shift + b
	dmenu-bluetooth; kill -38 $(pidof dwmblocks);

# Take screenshot
Print
	scrot -e 'mv $f ~/pix/shots/'

# power off menu
mod1 + F4
	power_off

# toggle compositor
mod1 + n
	toggle_compton



# Toggle mute
XF86AudioMute
    volumeControl mute; kill -54 $(pidof dwmblocks)
	
# Change volume
XF86Audio{Raise,Lower}Volume
    volumeControl {up,down}; kill -54 $(pidof dwmblocks)

# Change Brightness
XF86MonBrightness{Up,Down}
	brightnessControl {up,down}; kill -64 $(pidof dwmblocks)
