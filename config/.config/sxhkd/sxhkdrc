# my sxhkd keybinding configuration

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd;  dunstify -u low "Sxhkd configuration reloaded!!"

# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + d
	dmenu_run

# Show clipmenu
super + v
    CM_LAUNCHER=dmenu clipmenu

# open htop
super + r
	$TERMINAL -e htop

# open file browser
super + e
	$TERMINAL -e nnn

# open BROWSER
super + w
	$BROWSER

# open network manager
super + shift + w
	networkmanager_dmenu
	#$TERMINAL -e sudo nmtui

# run bluetooth dmenu script
super + shift + b
	dmenu-bluetooth; kill -RTMIN+4 dwmblocks;

# Take screenshot
super + s
	screenshot

super + shift + s
	screenshot select

# power off menu
#super + p
alt + 4
	power_off

# toggle compositor
super + n
	toggle_picom

# Toggle mute
XF86AudioMute
    volumeControl mute; pkill -RTMIN+20 dwmblocks;
	
# Change volume
XF86Audio{Raise,Lower}Volume
    volumeControl {up,down}; pkill -RTMIN+20 dwmblocks;

# Change Brightness
XF86MonBrightness{Up,Down}
	brightnessControl {up,down}; pkill -RTMIN+30 dwmblocks;
