#!/bin/sh

# battery percentage and status script

battery="/sys/class/power_supply/BAT0"
percentage="$(cat "$battery/capacity")"

case "$(cat "$battery/status")" in
	"Full") status="âš¡" ;;
	"Discharging") status="ğŸ”‹" ;;
	"Charging") status="ğŸ”Œ" ;;
	"Not charging") status="ğŸ›‘" ;;
	"Unknown") status="â™»ï¸" ;;
esac

# low battery incicator
[ "$status" = "ğŸ”‹" ] && [ "$percentage" -le 25 ] && status="â—"

echo "$status$percentage%"
